@page "/products/create"
@using Microsoft.AspNetCore.Authorization
@using BLRB2B.Application.Dto
@attribute [Authorize]
@inject BLRB2B.Application.Interfaces.IProductService ProductService
@inject NavigationManager NavigationManager

<PageTitle>Yeni Ürün - BLRB2B</PageTitle>

<div class="page-header">
    <div class="page-header-content">
        <div>
            <h1 class="page-title">Yeni Ürün</h1>
            <p class="page-description">Yeni bir ürün oluşturun.</p>
        </div>
        <div class="page-actions">
            <button class="btn btn-outline-secondary" @onclick="Cancel">
                <i class="bi bi-arrow-left me-2"></i>Listeye Dön
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Ürün Bilgileri</h5>
            </div>
            <div class="card-body">
                <EditForm Model="model" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />

                    <div class="row g-3">
                        <!-- Product Name -->
                        <div class="col-md-8">
                            <label class="form-label">Ürün Adı <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="model.Name" />
                            <ValidationMessage For="() => model.Name" class="text-danger small" />
                        </div>

                        <!-- SKU -->
                        <div class="col-md-4">
                            <label class="form-label">SKU <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="model.Sku" />
                            <ValidationMessage For="() => model.Sku" class="text-danger small" />
                        </div>

                        <!-- Category -->
                        <div class="col-md-6">
                            <label class="form-label">Kategori <span class="text-danger">*</span></label>
                            <InputSelect class="form-select" @bind-Value="model.CategoryId">
                                <option value="">Seçiniz...</option>
                                <option value="1">Elektronik</option>
                                <option value="2">Aksesuar</option>
                                <option value="3">Yazılım</option>
                                <option value="4">Hizmet</option>
                            </InputSelect>
                            <ValidationMessage For="() => model.CategoryId" class="text-danger small" />
                        </div>

                        <!-- Price -->
                        <div class="col-md-6">
                            <label class="form-label">Birim Fiyat <span class="text-danger">*</span></label>
                            <InputNumber class="form-control" @bind-Value="model.Price" />
                            <ValidationMessage For="() => model.Price" class="text-danger small" />
                        </div>

                        <!-- Stock Quantity -->
                        <div class="col-md-4">
                            <label class="form-label">Stok Miktarı <span class="text-danger">*</span></label>
                            <InputNumber class="form-control" @bind-Value="model.StockQuantity" />
                            <ValidationMessage For="() => model.StockQuantity" class="text-danger small" />
                        </div>

                        <!-- Is Active -->
                        <div class="col-md-8">
                            <div class="form-check form-switch mt-4">
                                <InputCheckbox class="form-check-input" @bind-Value="model.IsActive" />
                                <label class="form-check-label">Ürün Aktif</label>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="col-12">
                            <label class="form-label">Açıklama</label>
                            <InputTextArea class="form-control" @bind-Value="model.Description" rows="4" />
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @errorMessage
                        </div>
                    }

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button type="button" class="btn btn-secondary" @onclick="Cancel">
                            <i class="bi bi-x-lg me-2"></i>İptal
                        </button>
                        <button type="submit" class="btn btn-primary" disabled="isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="bi bi-check-lg me-2"></i>Kaydet
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>

    <!-- Info Panel -->
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">İpuçları</h6>
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>SKU benzersiz olmalıdır</li>
                    <li>Fiyat KDV hariç girilmelidir</li>
                    <li>Stok miktarı 0 olduğunda ürün satışa kapanır</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@code {
    private ProductCreateDto model = new();
    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleValidSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var result = await ProductService.CreateProductAsync(model);
            NavigationManager.NavigateTo("/products");
        }
        catch (Exception ex)
        {
            errorMessage = $"Ürün oluşturulurken hata oluştu: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/products");
    }
}
