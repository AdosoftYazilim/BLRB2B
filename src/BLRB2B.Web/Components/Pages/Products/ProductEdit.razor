@page "/products/edit/{id:int}"
@using Microsoft.AspNetCore.Authorization
@using BLRB2B.Application.Dto
@attribute [Authorize]
@inject BLRB2B.Application.Interfaces.IProductService ProductService
@inject NavigationManager NavigationManager

<PageTitle>Ürün Düzenle - BLRB2B</PageTitle>

<div class="page-header">
    <div class="page-header-content">
        <div>
            <h1 class="page-title">Ürün Düzenle</h1>
            <p class="page-description">Ürün bilgilerini güncelleyin.</p>
        </div>
        <div class="page-actions">
            <button class="btn btn-outline-secondary" @onclick="Cancel">
                <i class="bi bi-arrow-left me-2"></i>Listeye Dön
            </button>
        </div>
    </div>
</div>

@if (isLoading)
{
    <LoadingSpinner Message="Ürün yükleniyor..." />
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @errorMessage
    </div>
}
else if (product != null)
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Ürün Bilgileri</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="model" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />

                        <div class="row g-3">
                            <!-- Product Name -->
                            <div class="col-md-8">
                                <label class="form-label">Ürün Adı <span class="text-danger">*</span></label>
                                <InputText class="form-control" @bind-Value="model.Name" />
                                <ValidationMessage For="() => model.Name" class="text-danger small" />
                            </div>

                            <!-- SKU -->
                            <div class="col-md-4">
                                <label class="form-label">SKU <span class="text-danger">*</span></label>
                                <InputText class="form-control" @bind-Value="model.Sku" />
                                <ValidationMessage For="() => model.Sku" class="text-danger small" />
                            </div>

                            <!-- Category -->
                            <div class="col-md-6">
                                <label class="form-label">Kategori <span class="text-danger">*</span></label>
                                <InputSelect class="form-select" @bind-Value="model.CategoryId">
                                    <option value="">Seçiniz...</option>
                                    <option value="1">Elektronik</option>
                                    <option value="2">Aksesuar</option>
                                    <option value="3">Yazılım</option>
                                    <option value="4">Hizmet</option>
                                </InputSelect>
                                <ValidationMessage For="() => model.CategoryId" class="text-danger small" />
                            </div>

                            <!-- Price -->
                            <div class="col-md-6">
                                <label class="form-label">Birim Fiyat <span class="text-danger">*</span></label>
                                <InputNumber class="form-control" @bind-Value="model.Price" />
                                <ValidationMessage For="() => model.Price" class="text-danger small" />
                            </div>

                            <!-- Stock Quantity -->
                            <div class="col-md-4">
                                <label class="form-label">Stok Miktarı <span class="text-danger">*</span></label>
                                <InputNumber class="form-control" @bind-Value="model.StockQuantity" />
                                <ValidationMessage For="() => model.StockQuantity" class="text-danger small" />
                            </div>

                            <!-- Is Active -->
                            <div class="col-md-8">
                                <div class="form-check form-switch mt-4">
                                    <InputCheckbox class="form-check-input" @bind-Value="model.IsActive" />
                                    <label class="form-check-label">Ürün Aktif</label>
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <label class="form-label">Açıklama</label>
                                <InputTextArea class="form-control" @bind-Value="model.Description" rows="4" />
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success mt-3" role="alert">
                                <i class="bi bi-check-circle me-2"></i>
                                @successMessage
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(submitError))
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                @submitError
                            </div>
                        }

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                <i class="bi bi-x-lg me-2"></i>İptal
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-check-lg me-2"></i>Güncelle
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <!-- Info Panel -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">Ürün Detayları</h6>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Ürün ID:</dt>
                        <dd class="col-sm-7">@product.Id</dd>

                        <dt class="col-sm-5">Oluşturma:</dt>
                        <dd class="col-sm-7">@product.CreatedAt.ToString("dd.MM.yyyy")</dd>

                        <dt class="col-sm-5">Güncelleme:</dt>
                        <dd class="col-sm-7">@product.UpdatedAt.ToString("dd.MM.yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private ProductDto? product;
    private ProductUpdateDto model = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? successMessage;
    private string? submitError;

    protected override async Task OnInitializedAsync()
    {
        await LoadProductAsync();
    }

    private async Task LoadProductAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            product = await ProductService.GetProductByIdAsync(Id);

            if (product != null)
            {
                model = new ProductUpdateDto
                {
                    Id = product.Id,
                    Name = product.Name,
                    Sku = product.Sku,
                    Description = product.Description,
                    Price = product.Price,
                    StockQuantity = product.StockQuantity,
                    CategoryId = product.CategoryId,
                    IsActive = product.IsActive
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ürün yüklenirken hata oluştu: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleValidSubmit()
    {
        isSubmitting = true;
        submitError = null;
        successMessage = null;

        try
        {
            await ProductService.UpdateProductAsync(model);
            successMessage = "Ürün başarıyla güncellendi!";
            await LoadProductAsync();
        }
        catch (Exception ex)
        {
            submitError = $"Güncelleme başarısız: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/products");
    }
}
