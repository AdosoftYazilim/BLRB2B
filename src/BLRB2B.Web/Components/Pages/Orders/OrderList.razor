                    new() { Id = 3, OrderNumber = "ORD-2024-003", CustomerName = "DEF Inc.", OrderDate = DateTime.Today.AddDays(-2), TotalAmount = 15600, Status = "Processing", ItemCount = 5 },
                    new() { Id = 4, OrderNumber = "ORD-2024-004", CustomerName = "ABC Ltd. Şti.", OrderDate = DateTime.Today.AddDays(-3), TotalAmount = 5000, Status = "Delivered", ItemCount = 1 },
                },
                TotalCount = 4,
                PageNumber = 1,
                PageSize = 10
            };
        }
        catch (Exception ex)
        {
            viewModel.ErrorMessage = $"Siparişler yüklenirken hata oluştu: {ex.Message}";
        }
        finally
        {
            viewModel.IsLoading = false;
        }
    }

    private void GoToCreate()
    {
        NavigationManager.NavigateTo("/orders/create");
    }

    private void ViewOrder(int id)
    {
        NavigationManager.NavigateTo($"/orders/{id}");
    }

    private void GoToEdit(int id)
    {
        NavigationManager.NavigateTo($"/orders/edit/{id}");
    }

    private async Task ChangePage(int page)
    {
        viewModel.CurrentPage = page;
        await LoadOrders();
    }

    private void OnSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            viewModel.CurrentPage = 1;
            Task.Run(async () => await LoadOrders());
        }
    }

    private void ResetFilters()
    {
        viewModel.SearchTerm = string.Empty;
        viewModel.StatusFilter = null;
        viewModel.CurrentPage = 1;
        Task.Run(async () => await LoadOrders());
    }
}
